<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:text="Question Text" />

        <TextView
            android:id="@+id/current_value_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textAlignment="center"
            android:textSize="24sp"
            tools:text="0" />


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/min_value_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                tools:text="-3" />

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/value_slider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:splitTrack="true"
                android:progress="5"
                android:thumb="@drawable/thumb"
                android:progressTint="@color/invalidColor"
                android:indeterminate="false"
                android:max="10"/>

            <TextView
                android:id="@+id/max_value_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                tools:text="3" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/min_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:textAlignment="textStart"
                android:textSize="18sp"
                tools:text="Min Label" />

            <TextView
                android:id="@+id/neutral_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:text="label" />

            <TextView
                android:id="@+id/max_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:textAlignment="textEnd"
                android:textSize="18sp"
                tools:text="Max Label" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>